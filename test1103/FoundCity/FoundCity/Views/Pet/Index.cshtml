                    $.ajax({
                        url: "/Street/County",
                        type: "Get",
                        dataType: "json",
                        success: function (data) {
                            $("#lostPlace1").empty();
                            var sRows = '<option value="all1">全部</option>';
                            for (i = 0; i < data.length; i++) {
