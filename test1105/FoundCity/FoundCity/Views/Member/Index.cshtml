
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMember.cshtml";
}

<div class="tab-content">
    <div id="basic" class="tab-pane fade in section_memberItems">
        <div id="" class="member_profile">
            <form class="form-horizontal" action="">
                <div class="form-group">
                    <label class="control-label col-sm-3" for="FisrName">姓:</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control" id="FisrName" placeholder="" name="FisrName">
                    </div>
                    <div class="col-sm-1 required">
                        必填
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3" for="FisrName">名:</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control" id="LastName" placeholder="" name="LastName">
                    </div>
                    <div class="col-sm-1 required">
                        必填
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-7 col-sm-offset-3">
                        <label class="radio-inline"><input type="radio" name="optradio">男性</label>
                        <label class="radio-inline"><input type="radio" name="optradio">女性</label>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-3" for="Telephone">連絡電話:</label>
                    <div class="col-sm-7">
                        <input type="text" class="form-control" id="Telephone" placeholder="" name="Telephone">
                    </div>
                    <div class="col-sm-1 required">
                        必填
                    </div>
                </div>
                <div class="member_decoration"></div>
                <div class="form-group">
                    <div class="col-sm-offset-9 col-sm-3">
                        <button type="submit" class="btn btn-default">取消</button>
                        <button type="submit" class="btn btn-default">儲存</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>




